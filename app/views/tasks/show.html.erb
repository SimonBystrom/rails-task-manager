<div class="d-flex mb-3">
  <h1 class="flex-grow-1"> <%= @task.title %> </h1>

    <div class="border-2 d-flex align-items-center">
      <i class="fas fa-pen me-3"></i>
      <p class="ms=2 mt-0 mb-0"> <%= link_to "Edit this task", edit_task_path %> </p>
    </div>

</div>
<div class="card mb-2">
  <div class="card-body">
    <p> <%= @task.details %> </p>
  </div>
</div>

<div class="d-flex align-items-center mb-3">
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
<!--     <i class="far fa-check-square"></i> -->
  <p class="ms-2 mt-0 mb-0">
    <% if @task.completed %>
      This task is completed
    <% else %>
      This task is not completed yet
    <% end %>
  </p>
</div>

<div class="d-flex align-items-center">
  <i class="fas fa-undo-alt me-2"></i>
  <%= link_to 'Back to list', tasks_path %>
</div>
