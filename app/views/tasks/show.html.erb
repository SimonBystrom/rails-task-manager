<h1> <%= @task.title %> </h1>
<div class="card">
  <div class="card-body">
    <p> <%= @task.details %> </p>
  </div>
</div>

<div class="d-flex align-items-center">
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
<!--     <i class="far fa-check-square"></i> -->
  <p class="ms-2 mt-0 mb-0">
    <% if @task.completed %>
      This task is completed
    <% else %>
      This task is not completed yet
    <% end %>
  </p>
</div>

<%= link_to 'Back to list', tasks_path %>
